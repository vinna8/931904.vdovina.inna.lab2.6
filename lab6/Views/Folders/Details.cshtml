@model lab6.Models.Folder

@{
    ViewData["Title"] = "Details";
}
 
<ol class="breadcrumb breadcrumb-top">
    <li><a asp-action="Index" asp-controller="Folders">Root</a></li>
    <li class="active">@Model.Name</li>
</ol>
<div class="btn-toolbar" role="toolbar">
    <div class="btn-group" role="group">
        <a class="btn btn-default" asp-action="Create" asp-controller="Folders"><span class="glyphicon glyphicon-plus"></span> New folder</a>
        <a class="btn btn-default" asp-action="Create" asp-route-idParent="@Model.Id" asp-controller="Files"><span class="glyphicon glyphicon-plus"></span> New file</a>
    </div>
    <div class="btn-group" role="group">
        <a class="btn btn-default" asp-route-idParent="@Model.Id" asp-action="Edit" asp-controller="Folders"><span class="glyphicon glyphicon-pencil"></span> Edit folder</a>
        <a class="btn btn-default" asp-route-idParent="@Model.Id" asp-action="Delete" asp-controller="Folders"><span class="glyphicon glyphicon-remove"></span> Delete folder</a>
    </div>
</div>
<table class="table table-bordered table-striped table-top">
    <colgroup>
        <col style="width: 60%" />
        <col style="width: 20%" />
        <col style="width: 20%" />
    </colgroup>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>
                Size
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <a asp-action="Index" asp-controller="Folders">
                    <span class="glyphicon glyphicon-level-up"></span>
                    ..
                </a>
            </td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>

        @foreach (var item in Model.Files)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Files" asp-route-idFile="@item.Id">
                        @if (item.file != null)
                        {
                            <span class="glyphicon glyphicon-file"></span>
                        }

                        @item.Name

                    </a>
                </td>
                <td>
                    @item.Extension
                </td>
                <td>
                    @item.Size
                </td>
            </tr>
        }

    </tbody>
</table>