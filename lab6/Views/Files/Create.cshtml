@model lab6.Models.FileEditModel

@{
    ViewData["Title"] = "Create";
}
 
<ol class="breadcrumb breadcrumb-top">
    <li class="active">Upload file</li>
</ol>

<h2>Upload file</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Files" asp-route-idParent="@ViewBag.Folders.Id" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="file" class="control-label">File</label>
                <input asp-for="file" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-default" asp-action="Index" asp-controller="Folders">Cancel</a>
            </div>
        </form>
    </div>
</div>